# 火山引擎 API 配置 (用于豆包LLM)
VOLCENGINE_API_KEY=your_volcengine_api_key_here

# 阿里云 DashScope API 配置 (用于通义万相Wan视频)
DASHSCOPE_API_KEY=your_dashscope_api_key_here

# 模型配置
LLM_MODEL=doubao-seed-2-0-pro-260215
VIDEO_MODEL=wan

# 视频参数
SEGMENT_DURATION=15
VIDEO_RESOLUTION=1080p
VIDEO_FPS=24

# 视频拼接策略（可选）
# auto: copy concat -> ts concat -> re-encode concat (自动回退)
# copy: 仅尝试无损拼接（最快，但某些 mp4 会出现时长/时间戳异常）
# ts: 通过 ts 中间格式无损拼接（更稳）
# reencode: 重编码拼接（最稳，最慢）
# VIDEO_CONCAT_MODE=auto

# 路径配置
OUTPUT_DIR=output

# (可选) Server 持久化配置
# DATABASE_URL=sqlite:///output/autosedance.sqlite3
# PROJECTS_DIR=output/projects

# (推荐) 邮箱验证码登录（对外开放时建议开启）
AUTH_ENABLED=1
AUTH_REQUIRE_FOR_READS=1
AUTH_REQUIRE_FOR_WRITES=1
# 生产环境务必设置为强随机字符串；否则 OTP/Session 重启后会失效
AUTH_SECRET_KEY=change_me_to_a_long_random_string
AUTH_OTP_TTL_MINUTES=10
AUTH_SESSION_TTL_DAYS=30
# 开发调试：不发邮件，把验证码打印到后端日志（不要在公网开启）
# AUTH_DEV_PRINT_CODE=0

# SMTP（QQ 邮箱）
SMTP_HOST=smtp.qq.com
SMTP_PORT=465
SMTP_USER=2453204059@qq.com
# QQ 邮箱需要填写“授权码”，不是登录密码
SMTP_PASSWORD=your_qq_smtp_authorization_code
SMTP_FROM=2453204059@qq.com
SMTP_FROM_NAME=AutoSedance
SMTP_USE_SSL=1

# 上传大小限制（MB）
MAX_UPLOAD_MB=300

# CORS（仅当你让浏览器直接访问后端端口时需要；如果通过前端 /api 反代则不需要）
# CORS_ORIGINS=http://localhost:3612
